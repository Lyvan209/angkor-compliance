{
  "name": "angkor-compliance",
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/^(.*^)",
      "dest": "/server.js"
    },
    {
      "src": "/^(.*\\.(css^|js^|png^|jpg^|jpeg^|gif^|ico^|svg^)^)",
      "dest": "/$1"
    },
    {
      "src": "/^(.*^)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/^(^(?!api/^).*^)",
      "destination": "/index.html"
    }
  ]
}
